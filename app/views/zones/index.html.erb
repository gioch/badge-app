<div class="row">
    <div class="col-md-12">
        <h2 >
            Zones
            <div class="pull-right">
                <%= link_to 'zones/new' do %>
                    <div class="btn btn-sm btn-success">
                        <i class="glyphicon glyphicon-plus"></i> Add New Zone
                    </div>
                <% end %>
            </div>
        </h2>

        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr> 
                <th class="col-md-3">Zone</th> 
                <th class="col-md-4">Color</th>
                <th class="col-md-4">All Access</th>
                <th class="col-md-1">Action</th>
              </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Virebi's Zone</td>
                    <td>#23ff34</td>
                    <td><span class="badge badge-success">s</span></td>
                    <td>
                        <%= link_to '#' do %>
                            <div class="btn btn-xs btn-primary">
                                <i class="glyphicon glyphicon-pencil"></i>
                            </div>
                        <% end %>

                        <%= link_to '#' do %>
                            <div class="btn btn-xs btn-danger">
                                <i class="glyphicon glyphicon-trash"></i>
                            </div>
                        <% end %>
                    </td>
                </tr>
            </tbody>
          </table>
        <div>

    </div>
</div>