<%= form_for @user do |f| %>

    <div class="row">
        <div class="col-md-12">
            <%= f.label :email %>
            <%= f.text_field :email, class: 'form-control' %>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-md-6">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="col-md-6">
            <%= f.label :second_name %>
            <%= f.text_field :second_name, class: 'form-control' %>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-md-6">
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="col-md-6">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
    </div>
    <br>
    <div class="form-group">
        <%= f.label :admin %>
        <%= f.check_box :admin %>
    </div>
    <%= f.submit class: 'btn btn-success', value: 'Save user' %>
<% end %>